pivotal_blue = #256188
pivotal_green = #478872
light_gray = #ddd
dark_gray = #999
almost_white = #f3f3f3
highlighted = #ff6
fonts = Arial, Verdana, sans-serif

.main
  margin-left 10px

.content
  overflow-x auto
  white-space nowrap
  li
    list-style none

.key-list
  height 300px
  overflow auto
  background light_gray
  padding 10px

  li
    &:not(.tree)
    span
      &:hover
        background-color pivotal_blue
        color white

  li.active
  	background-color pivotal_blue
  	color white

  	&:hover
  		background-color pivotal_green

.closed
	ul
		display none

.tree
  position relative
  &:before
    content '- '
    position absolute
    left -10px
  &.closed:before
    content '+ '
    position absolute
    left -10px

.btn
  margin-bottom 10px